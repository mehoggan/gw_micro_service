cmake_minimum_required(VERSION 3.0.2)

project(cppmicroservices-download NONE)
include(ExternalProject)

ExternalProject_Add(cppmicroservices
	GIT_REPOSITORY https://github.com/CppMicroServices/CppMicroServices.git
	GIT_TAG master
	SOURCE_DIR "${CMAKE_BINARY_DIR}/cppmicroservices-src"
	BINARY_DIR "${CMAKE_BINARY_DIR}/cppmicroservices-build"
  PATCH_COMMAND patch -p1 < ${CMAKE_CURRENT_SOURCE_DIR}/patches/cppUservice.patch
	CONFIGURE_COMMAND ""
	BUILD_COMMAND ""
	INSTALL_COMMAND ""
	TEST_COMMAND "")
